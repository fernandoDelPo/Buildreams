<link rel="stylesheet" href="/css/register.css">
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/editProduct.css">


<title>Editar producto</title>

<%-include('./partials/head') %>

<%- include('./partials/header')%>


        <main class="main-form" id="edit">

            <form action="/products/editProduct/<%= productEdit.id %>?_method=PATCH" method="POST" class="create-form" enctype="multipart/form-data">

                <div class="control-formulario">
                    <h4>Modifica el producto:</h4>
                </div>


                <div class="control-formulario">
                    <label for="nombre" class="input-label">
                        <input type="text" name="nombre" id="nombre" placeholder="Nombre del producto"
                            value='<%=productEdit.nombre%>' class="control" required>
                        <div class="msg-error">Podrá contener de 6 a 12 letras mayúsculas, minúsculas, números. Admite
                            solo los caracteres ! ? - @ <i class="fa-solid fa-circle-exclamation" id="icon-danger"></i></div>
                    </label>
                </div>

                <div class="control-formulario">
                    <label for="descripcion" class="input-label">
                        <input type="text" name="descripcion" id="descripcion"
                            placeholder="Descripcion del producto" value='<%=productEdit.descripcion%>' class="control" required>
                        <div class="msg-error">Podrá contener de 6 a 12 letras mayúsculas, minúsculas, números. Admite
                            solo
                            los caracteres ! ? - @ <i class="fa-solid fa-circle-exclamation" id="icon-danger"></i></div>
                    </label>
                </div>

                <div class="control-formulario">
                    <label for="marca" class="input-label">
                        <input type="text" name="marca" id="marca" placeholder="Marca del producto"
                            value='<%=productEdit.marca%>' class="control" required>
                        <div class="msg-error">Podrá contener de 6 a 12 letras mayúsculas, minúsculas, números. Admite
                            solo
                            los caracteres ! ? - @ <i class="fa-solid fa-circle-exclamation" id="icon-danger"></i></div>
                    </label>
                </div>

                <div class="control-formulario">
                    <label for="precio" class="input-label">
                        <input type="number" name="precio" id="precio"
                            placeholder="Precio del producto" value='<%=productEdit.precio%>' class="control" required>
                        <div class="msg-error">Podrá contener números. <i class="fa-solid fa-circle-exclamation"
                                id="icon-danger"></i></div>
                    </label>
                </div>

                <div class="control-formulario">
                    <label for="stock" class="input-label">
                        <input type="stock" name="stock" id="stock" placeholder="Stock del producto"
                            value='<%=productEdit.stock%>' class="control" required>
                        <div class="msg-error">Podrá contener números<i class="fa-solid fa-circle-exclamation"
                                id="icon-danger"></i></div>
                    </label>
                </div>


                <div class="control-formulario">
                    <h4>Perfil de oferta:</h4>
                    <div class="padre-control">
                        <div class="hijo-control">
                            <label class="label-control" for="enOferta">Con descuento
                                <input type="radio" name="enOferta" id="enOferta" required>
                                <div class="msg-error">¿El producto tiene descuento?</div>
                            </label>
                        </div>
                        <div class="hijo-control">

                            <label class="label-control" for="enOferta">Sin descuento
                                <input type="radio" name="enOferta" id="sinOferta">
                            </label>
                        </div>
                    </div>
                </div>

                <div class="control-formulario">
                    <h4>Categoría:</h4>
                    <div class="padre-control2">
                        <div class="hijo-control2">
                            <input type="checkbox" name="categoria" id="herramientas">
                            <label for="herramientas">Herramientas</label>
                        </div>
                        <div class="hijo-control2">
                            <input type="checkbox" name="categoria" id="cementos-cal">
                            <label for="cementos-cal">Cementos/cal</label>
                        </div>
                        <div class="hijo-control2">
                            <input type="checkbox" name="categoria" id="aberturas">
                            <label for="aberturas">Aberturas</label>
                        </div>
                        <div class="hijo-control2">
                            <input type="checkbox" name="categoria" id="hierro-chapas">
                            <label for="hierro-chapas">Hierro/chapas</label>
                        </div>
                        <div class="hijo-control2">
                            <input type="checkbox" name="categoria" id="ladrillos">
                            <label for="ladrillos">Ladrillos</label>
                        </div>
                        <div class="hijo-control2">
                            <input type="checkbox" name="categoria" id="agua-gas">
                            <label for="agua-gas">Agua/gas</label>
                        </div>
                        <div class="hijo-control2">
                            <input type="checkbox" name="categoria" id="instalaciones">
                            <label for="instalaciones">Instalaciones</label>
                        </div>

                    </div>
                </div>
                <div class="control-formulario">
                    <h4 class="image-h4">Selecciona una imagen para el producto:</h4>
                    <label for="image-profile" class="label-image-profile">
                        <input type="file" name="image-profile" id="image-profile" accept=".jpg, .png">
                    </label>
                </div>

                <br>
                <div class="control-formulario">
                    <button type="reset" class="button-form">Limpiar</button>
                    <button type="submit" class="button-form"> Guardar producto </button>
                </div>
            </form>
        </main>

        <%- include('partials/footer')%>

        <%-include('./partials/script-bootstrap.ejs') %>


    </body>

</html>